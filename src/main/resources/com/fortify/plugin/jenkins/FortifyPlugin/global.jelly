<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

  <style type="text/css">
    .comboBoxList {
    display:block;
    background-color: #fff;
    color: #000;
    }
  </style>

  <f:section title="Fortify Assessment">
    <f:section title="Software Security Center configuration">
      <f:entry title="SSC URL" help="/plugin/fortify/help-sscUrl.html">
        <f:textbox name="url" field="url" id="url"/>
      </f:entry>

      <f:entry title="Authentication token" help="/plugin/fortify/help-sscAuthToken.html">
        <f:textbox name="token" field="token" id="token" checkMethod="post"/>
      </f:entry>

      <f:optionalBlock name="useProxy" title="Use proxy" checked="${instance.useProxy}" help="/plugin/fortify/help-proxy.html">
        <f:entry title="Proxy server host:port">
          <f:textbox name="proxyUrl" field="proxyUrl" id="proxyUrl"/>
        </f:entry>
        <f:entry title="Proxy server username">
          <f:textbox name="proxyUsername" field="proxyUsername" id="proxyUsername" checkMethod="post"/>
        </f:entry>
        <f:entry title="Proxy server password">
          <f:password name="proxyPassword" field="proxyPassword" id="proxyPassword" checkMethod="post"/>
        </f:entry>
      </f:optionalBlock>

      <f:entry title="Issue template" help="/plugin/fortify/help-sscProjTemplate.html">
        <script type="text/javascript" src="${rootURL}/plugin/fortify/refresh-projects.js"/>
        <div style="float:left;width:80%;">
          <f:editableComboBox id="projectTemplate" name="projectTemplate" field="projectTemplate" clazz="setting-input" items="${descriptor.projectTemplateItems}" />
        </div>
        <div style="float:left">
          <input value="â–¼" type="button" id="refreshButton" onclick="refreshTemplateList('${rootURL}/descriptor/${descriptor.clazz.name}/refreshProjectTemplates','url,token,useProxy,proxyUrl,proxyUsername,proxyPassword')" />
        </div>
        <div style="display:none;" id="refreshSpinner" >
          <img src="${imagesURL}/spinner.gif" /> ${progress}
        </div>
      </f:entry>

      <f:validateButton title="Test SSC connection" progress="Testing..." method="testConnection" with="url,token,useProxy,proxyUrl,proxyUsername,proxyPassword" />
      <f:entry title="Maximum issues per page" help="/plugin/fortify/help-breakdownPageSize.html">
        <f:number field="breakdownPageSize" id="breakdownPageSize" />
      </f:entry>
      <f:entry title="Connection timeout" help="/plugin/fortify/help-connectionTimeout.html">
        <f:number field="connectTimeout" id="connectTimeout" />
      </f:entry>
      <f:entry title="Read timeout" help="/plugin/fortify/help-readTimeout.html">
        <f:number field="readTimeout" id="readTimeout" />
      </f:entry>
      <f:entry title="Write timeout" help="/plugin/fortify/help-writeTimeout.html">
        <f:number field="writeTimeout" id="writeTimeout" />
      </f:entry>
    </f:section>

    <f:section title="Controller configuration">
      <f:entry title="Controller URL" help="/plugin/fortify/help-controllerUrl.html">
        <f:textbox name="ctrlUrl" field="ctrlUrl" id="ctrlUrl"/>
      </f:entry>

      <f:entry title="Controller token" help="/plugin/fortify/help-controllerToken.html">
        <f:textbox name="ctrlToken" field="ctrlToken" id="ctrlToken" checkMethod="post"/>
      </f:entry>

      <f:entry>
        <f:validateButton title="Test Controller connection" progress="Testing..." method="testCtrlConnection" with="ctrlUrl" />
      </f:entry>
    </f:section>

    <f:section title="Scan Settings">
      <f:entry title="Prevent Local Scans">
        <f:checkbox name="preventLocalScans" field="preventLocalScans" id="preventLocalScans"/>
      </f:entry>
    </f:section>

  </f:section>

</j:jelly>
